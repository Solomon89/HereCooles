@using Hakaton_Db.Models
@model User
@{
    ViewBag.Title = "Вход";
}

<div class="container">
    <div class="col-xs-12 mainArea login">
        <h3 style="color:red">
            @ViewBag.Message
        </h3>
        <div class="container">
            @using (Html.BeginForm())
            {

                <div class="form-group">
                    <label for="exampleInputEmail1">Почта</label>
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "Email" } })

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Пароль</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "пароль" } })
                </div>

                <button type="submit" class="btn btn-default">Вход</button>

            }

        </div>
    </div>
</div>

